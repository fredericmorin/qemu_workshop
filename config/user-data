package_update: true
package_upgrade: true
package_reboot_if_required: true

packages:
  # - docker.io
  - bash-completion
  - vim
  - iputils-ping
  - 9mount

write_files:
  # quality of life
  - path: /root/.bash_aliases
    permissions: '0644'
    content: |
      alias l='ls -la'
  - path: /etc/issue
    permissions: '0644'
    content: |
      \S
      Kernel \r on an \m
      IPv4: \4    IPv6: \6
  # autologin serial
  - path: /etc/systemd/system/serial-getty@ttyAMA0.service.d/override.conf
    permissions: '0644'
    content: |
      [Service]
      Type=simple
      ExecStart=
      ExecStart=-/sbin/agetty --autologin root --noclear %I 38400 linux

runcmd:
  # remove login motd ubuntu pro/esm spam on server image
